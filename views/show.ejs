<%include ./partials/header.ejs%>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title%></div>
    <div class="ui top attached "></div>
    <div class="item">
        <img class="centered ui rounded image" src="<%= blog.image%>"><br>
        <div class="content">
            <span><%=blog.created.toDateString()%></span><br>
        </div>
        <div class="description">
            <p><%=blog.body%></p>
        </div>

        <form method="post" action="/blogs/<%=blog._id%>?_method=DELETE">
            <button class="btn btn-outline-danger">Delete</button>

        </form>
        <a href="/blogs/<%=blog._id%>/edit"><button class="btn btn-outline-info">Update</button></a>
    </div>






</div>

<%include ./partials/footer.ejs%>